  <ItemGroup>
    <ProjectReference Include="..\Tarscord.Persistence\Tarscord.Persistence.csproj" />
  </ItemGroup>

    <ItemGroup>
        <None Update="Resources\config.yml">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
